    //1.
    @Override
    public int logIn(String name , String password){
        System.out.print("Enter your name: ");
        name = in.next();
        System.out.print("Enter your password: ");
        password = in.next();
        if(this.name.equals(name) && this.password.equals(password))
            return 1;
        else{
            while (this.name.equals(name) && this.password.equals(password)){
                System.out.println("Incorrect username or password!\nTry again, please!");
                System.out.print("Enter your name: ");
                name = in.next();
                System.out.print("Enter your password: ");
                password = in.next();
            }
            return -1;
        }
    }
